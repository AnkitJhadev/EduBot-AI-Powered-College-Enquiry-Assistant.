generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            String        @id @default(uuid())
  fullName      String
  email         String        @unique
  rollNumber    String        @unique
  mobileNumber  String?
  password      String
  status        StudentStatus @default(PENDING_ADMIN_APPROVAL)
  emailVerified Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("students")
}

model Admin {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

enum StudentStatus {
  PENDING_ADMIN_APPROVAL
  APPROVED
  REJECTED
}
